{
  "compilerOptions": {
    "allowJs": true,
    "checkJs": false,
    "noEmit": true,

    "module": "CommonJS",
    "target": "ES2020",
    "moduleResolution": "node",
    "types": ["node"],

    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true
  },
  "include": ["src/app.ts", "src/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
